<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrackActivityOthers">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Track Other Activities "
        android:textColor="@color/light_pink"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/circleImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.107"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:src="@color/colorAccent"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.205" />

    <TextView
        android:id="@+id/tv_today_date_others"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today date"
        app:layout_constraintBottom_toBottomOf="@+id/circleImageView"
        app:layout_constraintEnd_toEndOf="@+id/circleImageView"
        app:layout_constraintStart_toStartOf="@+id/circleImageView"
        app:layout_constraintTop_toTopOf="@+id/circleImageView"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="serif"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView"
        tools:layout_editor_absoluteX="-36dp"
        android:layout_margin="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="Pain &amp; Symptoms:"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_marginBottom="7dp"/>
                <TextView
                    android:id="@+id/tv_display_pain_symptoms"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:text="EveryThing's\nfine"
                    android:textColor="@color/light_pink"
                    android:textStyle="bold"
                    android:layout_margin="7dp"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="center"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:text="Fluid &amp; Vaginal discharge:"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_marginBottom="7dp"/>
                <TextView
                    android:id="@+id/tv_display_fluid_discharge"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:text="No\ndischarge"
                    android:textColor="@color/light_pink"
                    android:textStyle="bold"
                    android:layout_margin="7dp"
                    android:textAlignment="center"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:text="Sex Drive:"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="7dp"/>
                <TextView
                    android:id="@+id/tv_display_sex_drive"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:text="No\nSex"
                    android:textColor="@color/light_pink"
                    android:textStyle="bold"
                    android:layout_margin="7dp"
                    android:textAlignment="center"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>